<form id='register-form' method = "post" action = "/users">
    <input class="input-field" type = "text" name = "user[username]" value="<%=@user.username %>" placeholder="enter username"><br>
    <input class="input-field" type = "email" name = "user[email]" value="<%=@user.email %>" placeholder="enter email"><br>
    <input class="input-field" type="phone-number" name="user[phone_number]" value="<%=@user.phone_number %>" placeholder="phone number(4156667777)"  pattern="[0-9]{10}"><br>
    <input class="input-field" type = "password" name = "user[password]" placeholder="enter password"><br>
    <input id="forecastbutton" type = "submit", value = "Register User">

		<%= erb :'_errors' %>
		
</form>

