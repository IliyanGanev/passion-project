<%if @forecast%>
	<div class="forecast">
		<h2><%=@city%>, <%=@country%></h2>
		<div class='icon'>
			<img src=<%=@icon%>>
			<p><%=@weather%></p>
			<p> Temperature: <%=@temp%> ℃</p>
			<%=@temp_f%> F 
			<p> Wind: <%=@wind%> km/h</p>
			<%=@wind_miles%> mph
			<p> Humidity: <%=@humidity%></p>
		</div>
	</div>



